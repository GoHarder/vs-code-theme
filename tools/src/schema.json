{
  "$schema": "http://json-schema.org/draft-07/schema",
  "title": "Color source schema",
  "type": "object",
  "required": ["interface", "syntax"],
  "properties": {
    "interface": {
      "type": "object",
      "description": "The color settings for the interface.",
      "required": ["primary"],
      "properties": {
        "primary": {
          "type": "string",
          "description": "The primary color to base the interface on.",
          "format": "color-hex"
        },
        "secondary": {
          "description": "The secondary color settings.",
          "$ref": "#/$defs/colorOptions"
        },
        "tertiary": {
          "description": "The tertiary color settings.",
          "$ref": "#/$defs/colorOptions"
        },
        "neutral": {
          "type": "string",
          "description": "The neutral color to base the interface on.",
          "format": "color-hex"
        }
      }
    },
    "syntax": {
      "type": "array",
      "items": {
        "type": "object",
        "description": "Syntax color setting.",
        "required": ["value", "blend", "name"],
        "properties": {
          "value": {
            "type": "string",
            "description": "The color hex.",
            "format": "color-hex"
          },
          "blend": {
            "type": "boolean",
            "description": "Blend the value color with the primary color."
          },
          "name": {
            "type": "string",
            "description": "The javascript name of the color."
          }
        }
      }
    }
  },
  "$defs": {
    "colorOptions": {
      "type": "object",
      "properties": {
        "hueShift": {
          "type": "number",
          "description": "The hue shift from the primary color."
        },
        "chromaSplit": {
          "type": "number",
          "description": "The number to divide the primary color's chroma."
        }
      }
    }
  }
}
